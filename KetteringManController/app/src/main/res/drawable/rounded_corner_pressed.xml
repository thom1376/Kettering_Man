<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/drawable_bottom_margin"
        android:end="@dimen/drawable_right_margin"
        android:left="@dimen/drawable_left_margin"
        android:right="@dimen/drawable_right_margin"
        android:start="@dimen/drawable_left_margin"
        android:top="@dimen/drawable_top_margin">
        <shape>
            <solid android:color="@color/colorPrimaryDark" />
            <stroke
                android:width="@dimen/drawable_stroke_width"
                android:color="@color/colorAccent" />
            <corners android:radius="@dimen/drawable_corner_radius" />
            <padding
                android:bottom="@dimen/drawable_bottom_padding"
                android:end="@dimen/drawable_right_padding"
                android:left="@dimen/drawable_left_padding"
                android:right="@dimen/drawable_right_padding"
                android:start="@dimen/drawable_left_padding"
                android:top="@dimen/drawable_top_padding" />
        </shape>
    </item>
</layer-list>